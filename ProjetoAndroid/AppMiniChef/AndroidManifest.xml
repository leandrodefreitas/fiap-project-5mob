<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.fiap.minichef.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
         >
        <activity
            android:name="br.com.fiap.minichef.activity.Splash"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="AgendaActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.com.fiap.minichef.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name=".MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.fiap.minichef.activity.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name=".MenuActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> 
        <activity
            android:name="br.com.fiap.minichef.activity.EscolherPratoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>              
        <activity
            android:name="br.com.fiap.minichef.activity.ConsultarConcursoActivity"
            android:label="@string/title_activity_consultar_concurso"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.com.fiap.minichef.activity.CadastrarJogoActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_cadastrar_jogo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.com.fiap.minichef.activity.EscolherJogoActivity"
            android:label="@string/title_activity_escolher_jogo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.com.fiap.minichef.activity.ConferirJogoActivity"
            android:label="@string/title_activity_conferir_jogo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.com.fiap.minichef.activity.GerarSurpresinhaActivity"
            android:label="@string/title_activity_gerar_surpresinha"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>